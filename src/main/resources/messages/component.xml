<component name="messages" type="synapse/template">
    <subComponents>
        <component name="getMessage">
            <file>getMessage.xml</file>
            <description>Get a message by ID.</description>
        </component>
        <component name="getMessageCollection">
            <file>getMessageCollection.xml</file>
            <description>Get a message collection from the entire mailbox.</description>
        </component>
        <component name="getMessageCollectionFromFolder">
            <file>getMessageCollectionFromFolder.xml</file>
            <description>Get the message collection from that folder.</description>
        </component>
        <component name="sendMail">
            <file>sendMail.xml</file>
            <description>Send the message.</description>
        </component>
        <component name="replyToSender">
            <file>replyToSender.xml</file>
            <description>Reply to the sender of a message.</description>
        </component>
        <component name="replyToAll">
            <file>replyToAll.xml</file>
            <description>Reply to all recipients of a message.</description>
        </component>
        <component name="forwardMessage">
            <file>forwardMessage.xml</file>
            <description>Forward a message.</description>
        </component>
        <component name="deleteMessage">
            <file>deleteMessage.xml</file>
            <description>Delete a message.</description>
        </component>
        <component name="moveMessage">
            <file>moveMessage.xml</file>
            <description>Move a message to a folder.</description>
        </component>
        <component name="copyMessage">
            <file>copyMessage.xml</file>
            <description>Copy a message to a folder.</description>
        </component>
    </subComponents>
</component>